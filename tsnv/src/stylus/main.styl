@import '../../node_modules/vuetify/src/stylus/main'

$body-font-family = 'Fira Sans'
html
  font-size 16px!important
.application.theme--light
  background-color #eff0f4!important
  box-sizing border-box
.application
  font-family Fira+Sans,sans-serif!important
.overlay:before
  background-color transparent!important
  background radial-gradient(ellipse at center, rgba(109,129,199,0.3) 0%,rgba(19,11,48,1.0) 100%);
.list__tile__action
  min-width 40px!important
.black08
  background-color rgba(0,0,0,0.3)
.bottom__footer
  font-size 14px!important
  width 100%!important
  color rgba(255,255,255,0.3)!important
  text-align center
  padding 10px 0
  display block
.list__tile    
    line-height: 1.2
.noupper
  text-transform unset!important
  font-size 16px!important
.toolbar__content .chip
  font-size 16px!important
.dialog__content
  align-items flex-start!important
  padding 32px 0 0 0
nav h2
  font-size 16px
  text-align center
  color #fff 
  padding 12px 0
.news
  font-size 14px!important
.footer
  font-size 14px!important

input
  caret-color: white!important

main h1
  font-size 30px
main h2
  font-size 27px 
  font-weight 500
main h3
  font-size 24px 
  font-weight 500
main h4
  font-size 22px 
  font-weight 500
main h5
  font-size 20px 
  font-weight 500
main h6
  font-size 18px 
  font-weight 500
.toolbar__content .input-group 
  background hsla(0,0%,0%,.2)!important
  color white!important
  width 240px!important
.toolbar__content .input-group--focused
  background hsla(0,0%,100%,.2)!important
input[type = file] 
  opacity 0


@media only screen and (min-width 960px){
    .container{
      max-width 1920px!important
    }
}
@media only screen and (max-width 960px){
    .toolbar__extension{
      display none!important
    }
}
@media only screen and (max-width 960px){
    .flex.sm2{
      flex-basis 33.33333333333333%!important
      -webkit-box-flex 0!important
      -ms-flex-positive 0!important
      flex-grow 0!important
      max-width 33.33333333333333%!important
    }
}
@media only screen and (max-width 599px){
    .flex.sm2{
      flex-basis 100%!important
      -webkit-box-flex 0!important
      -ms-flex-positive 0!important
      flex-grow 0!important
      max-width 100%!important
    }
}
